{
  "name": "starter",
  "version": "1.0.0",
  "description": "Simple webpack setup",
  "main": "src/index.js",
  "repository": "https://github.com/CoreyMartin/webpack-starter.git",
  "author": "Corey <coreyn.martin@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@coreymartin/eslint-config": "github:CoreyMartin/eslint-config#master",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "lint-staged": "^8.0.4",
    "pre-commit": "^1.2.2",
    "webpack": "^4.24.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "react-dom": "^16.3.2",
    "react": "^16.6.0"
  },
  "scripts": {
    "build": "webpack --config webpack.prod.babel.js",
    "serve": "webpack-dev-server --config webpack.dev.babel.js",
    "lint": "eslint *.js --color",
    "lint-commit": "lint-staged"
  },
  "pre-commit": {
    "run": [
      "lint-commit"
    ],
    "colors": true
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --quiet"
      ]
    },
    "ignore": [
      "build/**"
    ]
  }
}
